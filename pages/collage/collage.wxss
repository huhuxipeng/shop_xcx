page {
  background: #f5f5f5;
}

.row, .column {
  display: flex;
}

.row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

.goodsSort {
  background: #fff;
}

.tab {
  position: relative;
  width: 18%;
  padding: 16rpx 0 16rpx 7%;
  font-size: 34rpx;
  color: #333;
}

.tab1{
  width: 25%;
  padding: 16rpx 0;
  text-align: center;
}

.down {
  color: #f22d07;
}

.arrow {
  position: absolute;
  top: 20rpx;
  right: 45rpx;
}

.i {
  display: block;
  border: 10rpx solid transparent;
  width: 0;
  height: 0;
  margin-bottom: 4rpx;
}

.i1 {
  border-bottom-color: #ccc;
}

.i1Sele {
  border-bottom-color: #f22d07;
}

.i2 {
  border-top-color: #ccc;
}

.i2Sele {
  border-top-color: #f22d07;
}

.collageBanner{
  width: 100%;
  height: 262rpx;
  margin-bottom: 20rpx;
}

.conduct{
  margin-bottom: 20rpx;
}

.title{
  margin-bottom: 20rpx;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.title view{
  width: 100rpx;
  height: 4rpx;
  background: #ccc;
}

.title text{
  margin: 0 20rpx;
}

.collageProductBox{
  overflow-x: auto;
  width: 100%;
}

.collageProductBox::-webkit-scrollbar{
  display: none;
}

.collageProduct{
  flex-shrink: 0;
  width: 150rpx;
  margin-left: 20rpx;
  padding-bottom: 5rpx;
  background: #fff;
  font-size: 28rpx;
  color: red;
  text-align: center;
}

.collageProduct image{
  width: 100%;
  height: 150rpx;
}

.listBox{
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  background: #fff;
}

.listBox image{
  width: 100%;
  height: 320rpx;
}

.listName,.listData{
  padding: 0 20rpx;
}

.listName{
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #ccc;
}

.listData{
  justify-content: space-between;
  align-items: center;
}

.listData_money{
  font-size: 36rpx;
  color: orangered;
}

.go{
  align-items: center;
  font-size: 26rpx;
  color: #ccc;
}

.go text{
  margin-left: 20rpx;
  padding: 8rpx 16rpx;
  background: orangered;
  font-size: 26rpx;
  color: #fff;
  border-radius: 15rpx;
}