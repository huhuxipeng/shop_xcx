.shopownerBox view {
  flex: 1;
  padding: 40rpx;
  text-align: center;
  font-size: 30rpx;
}

.binding, .condition {
  background: rgba(255, 64, 60, 0.3);
  color: #fff;
}

.shop {
  background: #eee;
  color: #ccc;
}

.condition{
  position: relative;
}

.icon2{
  position: absolute;
  top: 50%;
  right: -18rpx;
  width: 20rpx;
  height: 56rpx;
  margin-top: -28rpx;
}

.box{
  padding: 0 20rpx;
}

.conditionBox{
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #ccc;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.conditionBox text{
  padding-right: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.sele{
  position: relative;
  background: #eee;
  font-size: 30rpx;
  color: red;
  text-align: center;
}

.choice{
  position: absolute;
  top: 0rpx;
  right: 20rpx;
}

.address{
  margin: 20rpx 0;
  padding: 20rpx 20rpx;
  background: #fff;
  font-size: 28rpx;
  justify-content: center;
}

.addressText{
  margin-bottom: 20rpx;
}

.addressee{
  padding: 10rpx 10rpx;
  background: #eee;
  border-radius: 10rpx;
}

.information1{
  justify-content: space-between;
}

.subBtn{
  width: 100%;
  padding: 24rpx 0;
  background: red;
  border-radius: 15rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

.sele{
  margin-bottom: 20rpx;
  padding: 40rpx 20rpx;
}

.sele image{
  width: 138rpx;
  height: 138rpx;
  margin-right: 20rpx;
}

.sele .data .name, .sele .buyOff{
  color: #333;
}

.data{
  flex: 2;
  padding: 10rpx 0;
  align-items: flex-start;
  justify-content: space-between;
}

.buyOff{
  margin-left: 20rpx;
}