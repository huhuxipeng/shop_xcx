
.box{
  position: relative;
  margin-bottom: 20rpx;
  padding: 20rpx 20rpx;
  background: #fff;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.getimg{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 112rpx;
  height: 112rpx;
  opacity: 0;
}

.arrow{
  width: 16rpx;
  height: 30rpx;
}

.tx{
  width: 112rpx;
  height: 112rpx;
}

.confirm{
  padding: 10rpx 20rpx;
  background: orangered;
  color: #fff;
  border-radius: 15rpx;
}

.nicknameInput{
  flex: 2;
  margin: 0 20rpx;
  padding-left: 20rpx;
  border: 1px solid #eee;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #999;
}








.signOut{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 25rpx;
  background: orangered;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
}