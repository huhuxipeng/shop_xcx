}

.type_1>view {
  height: 100%;
}

.type_1 {
  width: 716rpx;
  height: 108rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 4rpx 6rpx 6rpx 4rpx;
  position: relative;
}

.row .type_2 {
  width: 352rpx;
}

.row .type_2:first-child {
  margin-right: 16rpx;
}

.type_1 .left {
  width: 82rpx;
  padding: 8rpx 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  line-height: 28rpx;
}

.type_1 .right {
  flex-grow: 1;
  padding: 10rpx;
  justify-content: center;
}

.type_1.color_1 .left {
  border-right: 2rpx dashed rgba(234, 128, 51, 1);
}

.color_1 {
  border: 2rpx solid rgba(234, 128, 51, 1);
  color: rgba(234, 128, 51, 1);
}

.color_1 .pick_now {
  background-color: rgba(234, 128, 51, 1);
}

.color_1.coupon_child .top {
  border-bottom: 2rpx dashed rgba(234, 128, 51, 1);
}

.type_1.color_2 .left {
  border-right: 2rpx dashed #4d7ae8;
}

.color_2 {
  border: 2rpx solid #4d7ae8;
  color: #4d7ae8;
}

.color_2 .pick_now {
  background-color: #4d7ae8;
}

.color_2.coupon_child .top {
  border-bottom: 2rpx dashed #4d7ae8;
}

.type_1.color_3 .left {
  border-right: 2rpx dashed #4bc489;
}

.color_3 {
  border: 2rpx solid #4bc489;
  color: #4bc489;
}

.color_3 .pick_now {
  background-color: #4bc489;
}

.color_3.coupon_child .top {
  border-bottom: 2rpx dashed #4bc489;
}

.type_1 .coupon .little {
  font-size: 36rpx;
  display: flex;
