  z-index: 0;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  line-height: 32rpx;
  height: auto;
}

.type_1 .bottom {
  font-size: 20rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(234, 128, 51, 1);
  line-height: 32rpx;
}

.type_1 .coupon .big {
  font-size: 96rpx;
  padding: 0;
  position: relative;
  left: -.2rem;
  letter-spacing: -8rpx;
