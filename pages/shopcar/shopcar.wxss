page {
  height: auto;
  padding-bottom: 10%;
  background: #f5f5f5;
}

.hu_row, .column {
  display: flex;
}

.hu_row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

.settlement {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 74rpx;
  background: #fff;
  line-height: 74rpx;
  border-top: 1px solid #f0f0f0;
}

.quanxuanBtn {
  float: left;
  margin: 16rpx 16rpx 0 32rpx;
}

.circle {
  margin-top: 0;
  margin-left: 1rpx;
}

radio {
  transform: scale(0.8);
}

.totalSelection, .total {
  font-size: 28rpx;
  color: #666;
}

.totalSelection {
  float: left;
}

.total {
  float: right;
  margin-left: 200rpx;
  padding-right: 18rpx;
}

.settlement_dynamic {
  float: right;
  height: 60rpx;
  margin: 8rpx 30rpx 0 10rpx;
  padding: 0 25rpx;
  line-height: 60rpx;
  background: #ff5900;
}

.settlement_dynamic text, .settlement_dynamic view {
  font-size: 26rpx;
  color: #fff;
}

.settlement .shopMoney {
  line-height: 76rpx;
}

.settlement .shopMoney view {
  margin-bottom: -2rpx;
}

.shopcarBox {
  margin-top: 20rpx;
  background: #fff;
}

.shop {
  width: 700rpx;
  margin: 0 auto 20rpx;
}

.shopcar_box {
  width: 100%;
  margin: 20rpx auto 0;
}

.shopName {
  margin-left: 18rpx;
  font-size: 32rpx;
  color: #666;
}

.icon {
  width: 32rpx;
  height: 30rpx;
  margin: 8rpx 6rpx 0 0;
}

.arrow2 {
  width: 9rpx;
  height: 14rpx;
  margin-top: 16rpx;
  margin-left: 14rpx;
}

.commodity_information {
  position: relative;
  overflow: hidden;
  _height: 1%;
  width: 100%;
  border-top: 1px solid #f0f0f0;
}

.commodity_informationBox {
  position: relative;
  overflow: auto;
  _height: 1%;
  width: 700rpx;
  margin: 0 auto;
  padding: 20rpx 0 70rpx;
  -webkit-transform: translateX(0);
  transform: translateX(0);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.mar{
  padding: 10rpx 0 20rpx;
}

.addReduce{
  position: absolute;
  bottom: 20rpx;
  left: 200rpx;
}

.addReduce view{
  width: 80rpx;
  height: 53rpx;
  line-height: 53rpx;
  border: 1px solid #ccc;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.addReduce input{
  display: inline-block;
  width: 80rpx;
  height: 53rpx;
  line-height: 53rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  border: 1px solid #ccc;
}

.circle, .commodity_informationCp, .information_introduce {
  float: left;
}

.commodity_information .circle {
  margin-top: 22rpx;
}

.commodity_informationCp {
  width: 117rpx;
  height: 117rpx;
  margin-left: 16rpx;
  margin-right: 24rpx;
}

.information_introduce {
  width: 480rpx;
}

.information_introduceName {
  width: 480rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  position: absolute;
  top: 22rpx;
  right: 18rpx;
  width: 14rpx;
  height: 9rpx;
}

.shopMoney {
  float: right;
  margin-right: 30rpx;
  color: #ff5900;
}

.shopMoney view {
  font-size: 26rpx;
}

.shopMoney text {
  font-size: 26rpx;
}

.del {
  position: absolute;
  top: 0;
  right: 0;
  width: 60px;
  height: 100%;
  background-color: orangered;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .commodity_informationBox {
  -webkit-transform: translateX(-60px);
  transform: translateX(-60px);
}

.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.blackBg, .hideBox {
  position: fixed;
  left: 0;
  z-index: 11;
  width: 100%;
}

.blackBg {
  top: 0;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.hideBox {
  bottom: -500px;
  height: 850rpx;
  background: #fff;
  color: #fff;
}

.parameterTit {
  position: relative;
  width: 654rpx;
  height: 118rpx;
  margin: 0 auto 0;
  padding-bottom: 20rpx;
  background: #fff;
}

.parameterTit_img {
  position: absolute;
  top: -26rpx;
  left: 0;
  width: 144rpx;
  height: 144rpx;
  margin-right: 24rpx;
  border: 1px solid #fff;
}

.parameterTit_details {
  width: 510rpx;
  margin-left: 170rpx;
}

.parameterTit_details .shopMoney {
  float: left;
  margin-top: 14rpx;
}

.selected, .parameterTit_label text {
  float: left;
  margin-top: 4rpx;
  font-size: 24rpx;
}

.selected {
  color: #ccc;
}

.parameterTit_label text {
  margin-right: 14rpx;
  color: #666;
}

.hide_box {
  overflow-y: auto;
  width: 654rpx;
  height: 554rpx;
  margin: 0 auto 0;
}

.hide_box::-webkit-scrollbar {
  display: none;
}

.confirmBtn {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  width: 654rpx;
  height: 70rpx;
  margin-left: -327rpx;
  background: #ff5900;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 20rpx;
}

.parameterBox {
  width: 100%;
}

.parameterBoxT {
  margin-top: 34rpx;
  font-size: 26rpx;
  color: #ccc;
}

.parameterCategory .parcat_sele {
  background: #ff5900;
  color: #fff;
}

.parameterCategory text {
  float: left;
  margin-top: 18rpx;
  margin-right: 20rpx;
  padding: 12rpx 22rpx;
  background: #eee;
  font-size: 26rpx;
  color: #666;
  border-radius: 20rpx;
}

.parameterNum {
  height: 52rpx;
  margin-top: 34rpx;
}

.parameterNum_txt {
  float: left;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 26rpx;
  color: #ccc;
}

.parameterNum .listBox_numBox {
  float: right;
}

.shoppingEmpty{
  height: 230rpx;
  background: #fff;
}

.shopBox{
  display: flex;
  height: 230rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}

.shopBox image{
  width: 150rpx;
  height: 114rpx;
  margin-right: 52rpx;
}

.shopText{
  text-align: center;
}

.shopText text{
  font-size: 26rpx;
  color: #333;
}

.shopText navigator{
  width: 285rpx;
  margin-top: 10rpx;
  padding: 14rpx 0;
  background: #f66;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.recommend{
  margin-top: 20rpx;
  padding: 16rpx 0;
  background: #fff;
  text-align: center;
  font-size: 34rpx;
  color: #333;
}

.colorCss{
  margin-top: 22rpx;
  font-size: 26rpx;
  color: #999;
}

.mktprice{
  color: #999;
  text-decoration: line-through;
}

.num{
  float: right;
  width: 100%;
  text-align: right;
  font-size: 26rpx;
  color: #999;
}