.commodity_information {
  position: relative;
  overflow: hidden;
  _height: 1%;
  width: 100%;
  height: 190rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-top: 1px solid #f0f0f0;
}

.commodity_informationBox {
  width: 100%;
  height: 100%;
  -webkit-transform: translateX(0);
  transform: translateX(0);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.del {
  position: absolute;
  top: 0;
  right: 0;
  width: 60px;
  height: 190rpx;
  background-color: orangered;
  line-height: 190rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .commodity_informationBox {
  -webkit-transform: translateX(-60px);
  transform: translateX(-60px);
}

.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
}

.goodsImg {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goodsDetails {
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.content {
  flex: 2;
  font-size: 30rpx;
  color: red;
}

.content .name {
  display:-webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}

.contentMoney {
  margin-top: 30rpx;
}

.contentMoney text {
  padding: 4rpx 10rpx;
  background: red;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.contentMoney view {
  margin-right: 10rpx;
  color: #333;
  font-size: 28rpx;
}

.canGet {
  margin: 0 30rpx;
}

.ewm {
  width: 72rpx;
  height: 72rpx;
  margin-right: 40rpx;
}

.popup{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  padding: 20rpx 20rpx 20rpx;
  background: #fff;
}

.popupBox image{
  width: 150rpx;
  height: 150rpx;
}

.popupBox .content{
  flex: 1;
  padding: 0 20rpx;
  justify-content: space-between;
}

.close{
  position: absolute;
  top: -40rpx;
  right: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.ewmImg{
  display: block;
  width: 420rpx;
  height: 420rpx;
  margin: 30rpx auto 0;
}

.peservation{
  width: 210rpx;
  margin: 30rpx auto 0;
  padding: 8rpx 26rpx;
  background: red;
  color: #fff;
  font-size: 30rpx;
  border-radius: 15rpx;
}

.popupBg{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.hide{
  display: none;
}

canvas{
  width: 420rpx;
  height: 420rpx;
}