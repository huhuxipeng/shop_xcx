.qianDaoBox {
  background: #fff;
  align-items: center;
}

.goldIcon {
  width: 86rpx;
  height: 86rpx;
  margin-top: 30rpx;
}

.myGold {
  margin-top: 10rpx;
  font-size: 30rpx;
}

.goldNum {
  margin: 40rpx 0;
  font-size: 36rpx;
}

.icon13, .icon14{
  width: 20rpx;
  height: 36rpx;
}

.icon13{
  padding-right: 40rpx;
}

.icon14{
  padding-left: 40rpx;
}

button {
  margin-bottom: 60rpx;
  padding: 35rpx 60rpx;
  background: white;
  color: orangered;
  border-radius: 25px;
  border-color: orangered;
  border-style: outset;
  border-image: initial;
  line-height: 0;
  font-size: 30rpx;
}

.topBar {
  position: relative;
  width: 100%;
  color: #333;
  font-family: '微软雅黑';
  font-weight: 200;
}

.whichDateBox{
  justify-content: center;
  align-items: center;
}

.topBar .whichDate {
  padding: 15rpx 0;
  font-size: 30rpx;
  text-align: center;
}

.topBar .whichYear {
  display: inline-block;
  vertical-align: top;
  padding-top: 15rpx;
  font-size: 28rpx;
}

.topBar .nongliDetail {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.monthBox {
  width: 96%;
  margin: 0 2% 2%;
  background: #fff;
}

.weekDay {
  display: flex;
  flex-grow: 1;
}

.weekDay .week {
  display: flex;
  width: 200rpx;
  margin: 30rpx 0;
  justify-content: center;
  font-family: '微软雅黑';
  font-weight: 200;
  border-right: 1px solid #eee;
}

.weekDay .week2{
  border: none;
}

.monthDay {
  width: 100%;
}

.monthDay .tr {
  width: 100%;
  display: flex;
  flex-grow: 1;
}

.monthDay .tr .day {
  display: block;
  width: 200rpx;
  margin: 6px 0;
  border-radius: 5px;
  text-align: center;
  color: #999;
}

.day view{
  width: 100%;
  height: 110rpx;
  background: #fafafa;
  border: 1rpx solid white;
}

.monthDay .tr .today {
  background-color: red;
  color: white;
}

.monthDay .tr .day .gongli {
  display: block;
  margin-top: 20rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.monthDay .tr .day .nongli {
  display: block;
  font-family: "微软雅黑";
  font-weight: 200;
  font-size: 20rpx;
  text-align: center;
}

.qiandaoSuccess_bg{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 4;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.qiandaoSuccess{
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 5;
  width: 626rpx;
  -webkit-transform: translate3d(-50%,-50%,0);
  transform: translate3d(-50%,-50%,0);
}

.qiandaoImg{
  width: 100%;
  height: 624rpx;
}

.qiandaoSuccess_view{
  position: absolute;
  top: 300rpx;
  left: -5rpx;
  width: 100%;
}

.qiandaoSuccess_view{
  align-items: center;
}

.qiandaoSuccess_view image{
  width: 75rpx;
  height: 75rpx;
}

.add{
  margin: 20rpx 0;
  font-size: 38rpx;
}

.text{
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.know{
  width: 535rpx;
  margin-top: 58rpx;
  padding: 20rpx 0;
  background: red;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
}










.hide{
  display: none;
}