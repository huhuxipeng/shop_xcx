/* pages/orderDetail/index.wxss */

page {
  background: #f5f5f5;
}

.order_state_wrap {
  background: #fa431f;
  padding: 40rpx 20rpx;
}

.icon_wrap {
  background: white;
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
}

.icon_wrap image {
  width: 75rpx;
}

.order_state_wrap .row {
  color: white;
  font-size: 30rpx;
}

.row {
  font-size: 30rpx;
  padding: 15rpx;
}

.row .icon {
  width: 45rpx;
  margin-right: 15rpx;
}

.row_wrap {
  margin-top: 20rpx;
}

.row .more {
  display: inline-block;
  height: 8px;
  width: 8px;
  top:50%;
  position: absolute;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  -webkit-transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}
.more_wrap{
  height:40rpx;
  width:30rpx;
}
.goods_name{
  margin-bottom:15rpx;
}