.shoppingEmpty {
  height: 230rpx;
  background: #fff;
}

.shopBox {
  display: flex;
  height: 230rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}

.shopBox image {
  width: 150rpx;
  height: 114rpx;
  margin-right: 52rpx;
}

.shopText {
  text-align: center;
}

.shopText text {
  font-size: 26rpx;
  color: #333;
}

.shopText navigator {
  width: 285rpx;
  margin-top: 10rpx;
  padding: 14rpx 0;
  background: #f66;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.recommend {
  margin-top: 20rpx;
  padding: 16rpx 0;
  background: #fff;
  text-align: center;
  font-size: 34rpx;
  color: #333;
}

.colorCss {
  margin-top: 22rpx;
  font-size: 22rpx;
  color: #999;
}

.mktprice {
  color: #999;
  text-decoration: line-through;
}

.num {
  float: right;
  width: 100%;
  text-align: right;
  font-size: 26rpx;
  color: #999;
}

.commodityList {
  margin: 20rpx 20rpx 0;
  background: #fff;
}

.commodity {
  flex: 1;
  height: 225rpx;
  margin-right: 16rpx;
}

.commodityDetails {
  margin-right: 16rpx;
  flex: 2;
  justify-content: space-between;
}

.name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.commodityMoney {
  margin-bottom: 10rpx;
  font-size: 34rpx;
  color: red;
  justify-content: space-between;
  align-items: center;
}

.cancel {
  height: 30rpx;
  padding: 6rpx 14rpx;
  line-height: 30rpx;
  border: 1px solid red;
  border-radius: 15rpx;
  font-size: 30rpx;
}

.commodityMoney .column text {
  color: #999;
  font-size: 30rpx;
  text-decoration: line-through;
}
