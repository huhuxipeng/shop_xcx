page{
  background: #fafafa;
}

.top{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  background: #f5f5f5;
}

.classifyLeft {
  overflow-y: auto;
  position: fixed;
  top: 100rpx;
  left: 0;
  width: 200rpx;
  height: 89.4%;
}

.classifyLeft::-webkit-scrollbar {
  display: none;
}

.classifyLeft li {
  display: block;
  height: 90rpx;
  margin-bottom: 2rpx;
  background: whitesmoke;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  color: #333;
}

.classifyLeft .sele {
  background: #fff;
  border-left: 2px solid #f22d07;
}

.classifyRight {
  overflow-y: auto;
  float: right;
  width: 530rpx;
  height: 89.4%;
  margin-top: 100rpx;
}

.classifyRight::-webkit-scrollbar {
  display: none;
}

.commodityList {
  _height: 0;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.commodityList_tit {
  position: relative;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 34rpx;
}

.line1, .line2 {
  position: absolute;
  width: 70rpx;
  height: 1px;
  background: #999;
}

.line1 {
  top: 25rpx;
  left: 90rpx;
}

.line2 {
  top: 25rpx;
  right: 90rpx;
}

.commodityBox {
  float: left;
  width: 31%;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 30rpx;
}

.commodityBox image {
  width: 100%;
  height: 160rpx;
}

.commodityBox text{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
