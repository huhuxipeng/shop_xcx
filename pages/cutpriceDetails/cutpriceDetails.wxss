page {
  background: red;
}

.cutpriceDetailsBg {
  width: 100%;
  height: 2062rpx;
}

.cutDetaBox, .rulePopupBg {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 96%;
  padding: 2% 2%;
}

.rulePopupBg {
  z-index: 3;
  width: 100%;
  height: 100%;
  padding: 0;
  background: #000;
  opacity: 0.5;
}

.ruleBtn {
  float: right;
  padding: 5rpx 15rpx;
  background: #fff;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #333;
}

.rulePopup {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 4;
  width: 80%;
  background: #fff;
  padding: 15rpx;
  font-size: 30rpx;
  color: #333;
  line-break: 30rpx;
  border-radius: 15rpx;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.cutpSuccess{
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 4;
  width: 70%;
  padding: 30rpx 50rpx 80rpx;
  background: #fff;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  border-radius: 15rpx;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.cutpSuccess view{
  margin-bottom: 10rpx;
}

.cutpSuccess .cutpriceBtn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 15rpx 0;
  background: red;
  border-radius: 0 0 15rpx 15rpx;
  color: #fff;
}

.tit {
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  font-size: 34rpx;
  align-items: cneter;
}

.rulePopup view {
  margin-top: 15rpx;
}

.close2 {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
}

.information {
  position: relative;
  width: 90%;
  margin: 70rpx auto 0;
  padding-bottom: 20rpx;
  background: #fafafa;
  border-radius: 22rpx;
  align-items: center;
  font-size: 30rpx;
}

.informationPortrait {
  position: absolute;
  top: 0;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  margin: -50rpx 0 0 -75rpx;
  border-radius: 50%;
}

.infoName {
  margin-top: 120rpx;
  margin-bottom: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.infoProduct {
  width: 90%;
  padding: 15rpx;
  margin-top: 30rpx;
  background: #eee;
  border-radius: 15rpx;
}

.infoProduct image {
  flex: 1;
  -webkit-box-flex: 1;
  height: 200rpx;
  margin-right: 15rpx;
}

.infoProduct_content {
  flex: 2;
  -webkit-box-flex: 2;
  justify-content: space-between;
}

.productName {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}

.infoMoney {
  justify-content: space-between;
  align-items: center;
}

.infoMoney view {
  color: red;
  font-size: 36rpx;
}

.infoMoney text {
  font-size: 24rpx;
}

.alreadyBox {
  margin-top: 15rpx;
  justify-content: center;
  align-items: baseline;
  color: #fff;
  font-size: 30rpx;
}

.alreadyBox text {
  color: yellow;
  font-size: 52rpx;
}

.shout {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  padding: 25rpx 35rpx;
  background: gold;
  color: red;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  line-height: 50rpx;
}

.countDown {
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

.cutDownBox {
  width: 90%;
  margin: 70rpx auto 0;
  background: #fff;
  border-radius: 22rpx;
  font-size: 30rpx;
}

.cutDownBox_tit {
  padding: 22rpx;
  text-align: center;
}

.cutDownBox_li {
  height: 112rpx;
  padding: 15rpx;
  border-top: 1px solid antiquewhite;
  color: #333;
}

.cutDownBox_li image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
}

.cutDownBox_info {
  flex: 2;
  margin-left: 15rpx;
  justify-content: center;
  font-size: 28rpx;
}

.cutDownBox_ts {
  align-items: center;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.cutpList {
  padding: 22rpx;
  flex-wrap:wrap;
  justify-content: space-between;
}

.cutpList_li {
  width: 49%;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  background: #fff;
}

.cutpList_img {
  width: 100%;
  height: 375rpx;
  border-bottom: 1px solid #eee;
}

.cutpList_name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #333;
}

.cutpList_money{
  margin-top: 10rpx;
  padding: 0 10rpx;
  justify-content: space-between;
  font-size: 30rpx;
  color: red;
}

.cutpList_money view{
  color: #ccc;
  text-decoration: line-through;
}

.share{
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 4;
  width: 249rpx;
  height: 285rpx;

}