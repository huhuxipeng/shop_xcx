.wrap{
  overflow-y: auto;
  height: 1000rpx;
  padding: 0 20rpx;
}

.wrap::-webkit-scrollbar{
  display: none;
}

.tit{
  margin-top: 40rpx;
  font-size: 34rpx;
}

.wrap text{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
  text-align: justify;
  text-indent: 36rpx;
}

.nextStep{
  width: 90%;
  margin: 40rpx auto 0;
  padding: 20rpx 0;
  background: #ff403c;
  color: #fff;
  text-align: center;
  border-radius: 15rpx;
  font-size: 34rpx;
}