page {
  padding-bottom: 100rpx;
  color: #333;
}

.swiperBox {
  height: 637rpx;
}

.swiperBox image {
  width: 100%;
  height: 100%;
}

.cartBtn {
  position: absolute;
  top: 22rpx;
  right: 22rpx;
  width: 64rpx;
  height: 64rpx;
  background: none;
}

.cartBtn image {
  width: 100%;
  height: 100%;
}

.box {
  padding: 0 16rpx;
}

.money {
  padding: 6rpx 0;
  align-items: center;
}

.present {
  margin-right: 10rpx;
  font-size: 36rpx;
  color: #f22d07;
}

.primary {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.sold {
  width: 100%;
  text-align: right;
  font-size: 26rpx;
  color: #999;
}

.name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 16rpx 0;
  font-size: 28rpx;
  color: #333;
}

.shopownerBox {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
  font-size: 28rpx;
}

.shopownerBox text {
  color: #333;
}

.shopownerBtn {
  background: none;
  color: #f22d07;
  line-height: 0;
}

.shopownerBtn image, .seleArrow {
  width: 16rpx;
  height: 22rpx;
  margin-left: 10rpx;
}

.give {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.give text {
  margin-right: 16rpx;
  padding: 0 10rpx;
  color: #f22d07;
  border: 1px solid #f22d07;
  border-radius: 20rpx;
}

.give .red {
  margin-right: 26rpx;
}

.seleArrow {
  margin-top: 8rpx;
}

.shopBox {
  padding: 16rpx 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.shopBox image {
  width: 78rpx;
  height: 78rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.shopInformation {
  flex-grow: 1;
  font-size: 24rpx;
}

.shopInformation .shopName {
  margin-bottom: 6rpx;
  font-size: 28rpx;
}

.bond {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.bond text {
  color: #f22d07;
}

.getShop {
  width: 160rpx;
  height: 46rpx;
  margin-top: 14rpx;
  background: none;
  flex-shrink: 0;
  text-align: center;
  line-height: 46rpx;
  font-size: 24rpx;
  color: #f22d07;
  border: 1px solid #f22d07;
  border-radius: 20rpx;
}

.qianggou_wrap {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.text {
  font-size: 24rpx;
  position: absolute;
  width: 281rpx;
  text-align: center;
  top: 7rpx;
  z-index: 1;
  right: 0rpx;
}

.qianggou_img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
}

.time_wrap {
  font-size: 26rpx;
  width: 281rpx;
  position: absolute;
  top: 47rpx;
  z-index: 1;
  right: 0;
}

.time_wrap .child {
  color: white;
  background: #333;
  padding: 4rpx 7rpx;
  border-radius: 8rpx;
  margin: 0 6rpx;
}

.gray {
  font-size: 28rpx;
}

.label text {
  margin-right: 20rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #333;
  border: 1px solid #000;
}

.activityNum {
  background: #999;
}

/* 优惠券相关 */

.couponList {
  display: flex;
  padding: 0 40rpx;
}

.couponList .child {
  position: relative;
  margin-right:18rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 20rpx;
  color: white;
  font-size: 24rpx;
}

.couponList image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}

.popup_wrap {
  width: 750rpx;
  height: 646rpx;
  background: white;
}

.popup_wrap view {
  flex-wrap: row;
  box-sizing: border-box;
}

.cs{
  flex-wrap: row;
}

.popup_wrap .header {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  width: 100%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
  position: relative;
  border-bottom: 2rpx solid rgba(245, 245, 245, 1);
}

.popup_wrap .header .close {
  width: 30rpx;
  height: 30rpx;
  border: 1px dashed #4a4a4a;
  color: #4a4a4a;
  position: absolute;
  right: 32rpx;
  top: 36rpx;
}

.popup_wrap .left {
  width: 212rpx;
  height: 170rpx;
  position: relative;
}

.popup_wrap .left image {
  position: absolute;
  top:0;
  left:0;
  z-index: 0;
  width: 100%;
  height: 100%;
}

.popup_wrap .coupon {
  z-index: 1;
  position: relative;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.popup_wrap .row {
  padding: 14rpx 20rpx;
}

.popup_wrap .text {
  z-index: 1;
  position: relative;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  width: 100%;
  color: rgba(255, 255, 255, 1);
  line-height: 24rpx;
  margin-bottom: 15rpx;
}

.popup_wrap .right {
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.09);
}

.coupon .little {
  font-size: 32rpx;
}

.coupon .big {
  font-size: 72rpx;
  line-height: 72rpx;
  left: -6rpx;
  position: relative;
}

.popup_wrap .detail {
  height: 150rpx;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
}

.popup_wrap .list_wrap {
  overflow: auto;
}

.popup_wrap .between {
  margin-top: 0;
}

.popup_wrap .cpn_type {
  width: 84rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  color: white;
  border-radius: 16rpx;
  font-size: 20rpx;
}

.popup_wrap .color_1  .cpn_type {
  background: rgba(155, 73, 195, 1);
}

.popup_wrap .color_1  .use_now {
  color:white;
  background: linear-gradient(90deg, #D999F5, rgba(155, 73, 195, 1) 100%);
}

.popup_wrap .color_1  .pick_now {
  color: rgba(155, 73, 195, 1);
  border: 2rpx solid rgba(155, 73, 195, 1);
}

.popup_wrap .color_1  .cpn_type {
  background: rgba(155, 73, 195, 1);
}

.popup_wrap .color_2  .cpn_type {
  background: #4bc489;
}

.popup_wrap .color_2  .use_now {
  color: white;
  background: linear-gradient(90deg, rgba(131, 227, 180, 1) 0%, rgba(74, 195, 136, 1) 100%);
}
.popup_wrap .color_2  .pick_now {
  color: #4bc489(155, 73, 195, 1);
  border: 2rpx solid #4bc489;
}

.popup_wrap .color_2  .cpn_type {
  background: #4bc489;
}

.popup_wrap .color_3  .use_now {
  color: white;
  background: linear-gradient(90deg, rgba(148, 176, 247, 1) 0%, rgba(71, 117, 231, 1) 100%);
}
.popup_wrap .color_3  .pick_now {
  color: #4d7ae8(155, 73, 195, 1);
  border: 2rpx solid #4d7ae8;
}
.popup_wrap .color_3  .cpn_type {
  background: #4d7ae8;
}
.popup_wrap .color_4  .use_now {
  color: white;
  background: linear-gradient(90deg, rgba(148, 176, 247, 1) 0%, #ea8033);
}
.popup_wrap .color_4  .pick_now {
  color: #ea8033(155, 73, 195, 1);
  border: 2rpx solid #ea8033;
}
.popup_wrap .color_4  .cpn_type {
  background: #ea8033;
}

.popup_wrap .cpn_name {
  margin-left: 15rpx;
  font-size: 28rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-weight: 600;
  color: black;
}

.popup_wrap .use_now,.popup_wrap .pick_now {
  width: 104rpx;
  height: 40rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  bottom: 18rpx;
  right: 20rpx;
}

.detail image {
  position: absolute;
  width: 132rpx;
  height: 132rpx;
  top: -39rpx;
  right: -17rpx;
}

.popup_wrap .cpn_time {
  position:absolute;
  bottom:18rpx;
  left:20rpx;
  font-size: 20rpx;
  color: rgba(74, 74, 74, 1);
}

/* 优惠券相关结束 */
