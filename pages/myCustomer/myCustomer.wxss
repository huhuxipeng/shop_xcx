page{
  padding-bottom: 40rpx;
}

.Box{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.portrait{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.follow{
  margin-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff403c;
}

.information{
  font-size: 26rpx;
}

.informationBox{
  margin-bottom: 10rpx;
  align-items: center;
}

.informationBox text{
  padding: 0 10rpx;
  color: #ff403c;
  border-radius: 15rpx;
}

.bor{
  margin: 0 20rpx;
  border: 1px solid #ff403c;
}

.number{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  background: #fafafa;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #a6a6a6;
}