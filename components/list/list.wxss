.wrap {
  padding: 0 2%;
}

.row {
  display: flex;
  width: 100%;
}

.goodsSort {
  position: fixed;
  top:0;
  left: 0;
  z-index: 2;
  background: #fff;
}

.tab {
  position: relative;
  width: 18%;
  padding: 16rpx 0 16rpx 7%;
  font-size: 34rpx;
  color: #333;
}

.tab1{
  width: 25%;
  padding: 16rpx 0;
  text-align: center;
}

.down {
  color: #f22d07;
}

.arrow {
  position: absolute;
  top: 20rpx;
  right: 45rpx;
}

.i {
  display: block;
  border: 10rpx solid transparent;
  width: 0;
  height: 0;
  margin-bottom: 4rpx;
}

.i1 {
  border-bottom-color: #ccc;
}

.i1Sele {
  border-bottom-color: #f22d07;
}

.i2 {
  border-top-color: #ccc;
}

.i2Sele {
  border-top-color: #f22d07;
}

.wrapUl {
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}

.wrapUl_list {
  width: 45%;
  margin-top: 20rpx;
  padding: 0 2%;
  background: #fff;
}

.wrapUl_list image {
  width: 100%;
  height: 345rpx;
  margin-top: 16rpx;
}

.list_name {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  min-height: 70rpx;
  font-size: 27rpx;
}

.list_money{
  overflow: hidden;
  _height: 0;
  margin-top: 10rpx;
}

.money_primary{
  float: left;
  color: #f22d07;
  font-size: 30rpx;
}

.money_primary text, .money_present text{
  font-size: 24rpx;
}

.money_present{
  float: right;
  text-decoration: line-through;
  color: #999;
  font-size: 26rpx;
}

.list_integral{
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.list_integral text{
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #f22d07;
}

.no_data{
  display: block;
  width: 100%;
  margin-top:20rpx;
  padding: 10rpx 0;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.no_hide{
  display: none;
}