/* components/footerBuy/index.wxss */
@import "../../api/common.wxss";

.row {
  font-size: 34rpx;
}

.popup_main .close {
  position: absolute;
  top: -40rpx;
  right: 30rpx;
  width: 85rpx;
}

.popup_main .row {
  padding: 15rpx 0;
}

.row .face {
  width: 185rpx;
  height: 185rpx;
}

.row .right {
  padding: 15rpx;
}

.row .goods_name {
  font-weight: bold;
}

.cate .cols {
  background: red;
  color: white;
}

.cate li {
  background: #eee;
  font-size: 30rpx;
  border-radius: 35rpx;
  margin-right: 40rpx;
  margin-bottom: 15rpx;
  padding: 8rpx 35rpx;
  white-space: nowrap;
}

.category .row {
  font-size: 30rpx;
  margin: 15rpx 0;
  flex-wrap: wrap;
}

.footers.row view {
  width: 50%;
  padding: 22rpx 0;
  text-align: center;
  background: red;
  color: white;
}

.footers.row view.addcars {
  background: #f5f5f5;
  color: #333;
}

.content {
  max-height: 755rpx;
  overflow: auto;
}
