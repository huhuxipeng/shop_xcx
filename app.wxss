@import "dist/index.wxss";
@import "api/common.wxss";
page{
  background: #f5f5f5;
}

.container {
  background: #f9f9f9;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 15px 0;
}

.container::before {
  position: fixed;
  top: 0;
  left: 0;
  content: '';
  width: 100%;
  height: 1rpx;
  background-color: #e2e2e2;
  z-index: 5;
}

.doc-title {
  position: relative;
  padding: 15px 0;
  margin: 10px 15px;
  line-height: 25px;
  font-size: 25px;
  color: #666;
}

.doc-description {
  margin: 14px 0;
  padding: 0 15px;
  font-size: 14px;
  line-height: 20px;
  color: #666;
}

.hu_row, .column {
  display: flex;
}

.hu_row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

.nav{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  /* padding-top: 6rpx; */
  background: #fff;
  align-items: center;
  justify-content: flex-end;
}

.nav image{
  width: 34rpx;
  height: 34rpx;
}

.navShop,.navService,.navCollection{
  flex-shrink: 0;
  font-size: 28rpx;
  align-items: center;
}

.navShop{
  margin-left: 20rpx;
}

.navService{
  margin-left: 70rpx;
  margin-right: 70rpx;
}

.join, .purchase{
  font-size: 28rpx;
}

.join{
  width: 280rpx;
  text-align: center;
}

.purchase{
  width: 150rpx;
  height: 90rpx;
  background: #F22D07;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
}