/* 全局通用样式 */

.row {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  width: 100%;
  color: #333;
  box-sizing: border-box;
}

.popup_main {
  background: white;
  width: 750rpx;
  padding: 22rpx;
  box-sizing: border-box;
  position: relative;
}
.shrink_0{
  flex-shrink: 0
}
.row .bold, .row.bold {
  font-weight: bold;
}

.list_wrap li {
  width: 100%;
  color: #333;
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
  box-sizing: border-box;
  padding: 0 25rpx;
  background: white;
  margin-top: 20rpx;
}

.list_wrap li .row {
  padding: 15rpx;
}

.row .goods_img {
  width: 105rpx;
  height:105rpx;
  border-radius: 15rpx;
}

.row .goods_name {
  font-size: 25rpx;
}

.flex {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
}

.flex_column {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
}

.flex_grow_1 {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.more_warp, .more_wrap {
  position: relative;
  padding-right: 65rpx;
}

.row_wrap {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  width: 100%;
}

.row_wrap .row {
  padding: 25rpx;
}

.gray {
  color: #999;
}

.red {
  color: red;
}

.flex_center {
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}

.align_center {
  align-items: center;
  -webkit-align-items: center;
}

.justify_center {
  justify-content: center;
  -webkit-justify-content: center;
}

.justify_end {
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
}

.flex_center view {
  text-align: center;
}

.row image {
  width: 100%;
}

.row .slide-image {
  width: 100%;
  height: 100%;
}

.row .left {
}

.between {
  display:flex;
  margin-top: 20rpx;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.row.end {
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}

.row button.primary, .row button.primary {
  height: 100%;
  white-space: nowrap;
  line-height: 70rpx;
  width: auto;
}

a.primary {
  margin-left: 20rpx;
  border: 1px solid #333;
  border-radius: 25rpx;
  font-size: 25rpx;
  height: 44rpx;
  line-height: 42rpx;
  padding: 5rpx 25rpx;
}

a.primary.red {
  border: 1px solid red;
}

.pri_line {
  text-decoration: line-through;
}

.mine_menu .row {
  border-bottom: 1px solid #f5f5f5;
}

.bg_fa {
  background: #fafafa;
}

.goods_detail {
  width: 390rpx;
  padding: 5rpx 15rpx;
  font-size: 25rpx;
  line-height: 37rpx;
}

.goods_prize {
  flex-grow: 1;
  text-align: right;
  font-size: 25rpx;
  line-height: 37rpx;
}

.order_title {
  font-size: 30rpx;
}

.total_prize {
  border-bottom: 1px solid #ccc;
  text-align: right;
  padding: 15rpx;
  font-size: 30rpx;
}

.row .icon {
  width: 35rpx;
}

.row .row_button {
  width: 100%;
  background: #f22d07;
  color: white;
  text-align: center;
  padding: 15rpx;
  font-size: 38rpx;
}

.row .buy_button {
  background: #f22d07;
  color: white;
  font-size: 28rpx;
}

.row .orderlistIcon {
  width: 32rpx;
  height: 30rpx;
  margin: 8rpx 6rpx 0 0;
}

.rightBox .between {
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}